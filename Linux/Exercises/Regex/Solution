
#!/bin/bash

# Exercise 1: Find Processes Starting with "bash"
echo "Processes starting with 'bash':"
pgrep '^bash'

echo ""

# Exercise 2: Find Processes Ending with "d"
echo "Processes ending with 'd':"
pgrep 'd$'

echo ""

# Exercise 3: Find Processes Starting with "s" and Ending with "d"
echo "Processes starting with 's' and ending with 'd':"
pgrep '^s.*d$'

echo ""

# Exercise 4: Find Processes Whose Name is Exactly "bash"
echo "Processes with the exact name 'bash':"
pgrep '^bash$'







